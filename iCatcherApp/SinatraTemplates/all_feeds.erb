<html>
<head>
  <title>iCatcher feeds</title>
  <link rel="icon" type="image/png" href="/resources/icatcher_icon_16.png" />
</head>
<body>
  <p><a href="/adhoc_feed.xml">Ad Hoc Downloads</a></p>
  
  <% @all_searches.each do |s| %>
  <p><a href="/feeds/<%= s.filename %>.xml"><%= s.displayname %></a></p>
  <% end %>

<div>
  <p>Bookmarklet</p>
  <a id="bookmarklet"
onclick="window.alert('Drag this link to your bookmarks toolbar...');return false;"
href="javascript:document.location='http://localhost:8019/instant-download?url='+encodeURIComponent(document.location.href)">
    <span>iCatcher bookmarklet</span>
  </a>
</div>

</body>
</html>
